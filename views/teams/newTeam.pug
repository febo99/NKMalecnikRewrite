html
    head
        include ../templates/header
        title NK Malecnik
    body
        include ../templates/logoBar
        .wrapper
            include ../templates/navbar
            .contentWrapper
                .container
                    form(action='/teams/addTeam', method='post')
                        .form-group
                            label(for='name') Ime:
                            input(type='text' class='form-control' placeholder='Vnesite ime ekipe.' name='name' id='name')
                        .form-group
                            label(for='note') Note:
                            input(type='text' class='form-control' placeholder='Vnesi note.' name='note' id='note')
                        .form-group
                            label(for='coach') Trener:
                            select(name='coach' class='form-control' id='coach')
                                each user in users
                                    option(value= user.ID)= user.name
                        .form-group
                            label(for='assistant') Pomoƒçnik:
                            select(name='assistant' class='form-control' id='assistant')
                                each user in users
                                    option(value= user.ID)= user.name
                        .form-group
                            label(for='technical') Technical:
                            select(name='technical' class='form-control' id='technical')
                                each user in users
                                    option(value= user.ID)= user.name
                        br
                        .form-group
                            input(type='submit' class='btn btn-primary full-width' value='Dodaj ekipo') 
                if error
                    each e in error
                        h4= e