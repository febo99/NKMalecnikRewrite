html
    head
        include templates/header
        title NK Malecnik
    body
        include templates/logoBar
        .wrapper
            include templates/navbar
            .contentWrapper
                h2= `Dobrodosli ${user.name} ${user.surname}`
                form(action='/dashboard/addPost',method="post")
                    textarea#post(name="postContent", cols="30", rows="7", maxlength=250)
                    p#charCounter 0/250
                    input(type="submit" value='Objavi')
                if error
                    h4= error
                if success
                    h4= success
                if posts
                    each post in posts
                        .postWrapper
                            .postHeader
                                h2= `${post.dateOfPost}, ${post.name} ${post.surname}`
                            .postContent
                                p= post.content
                            .postPinRequest
                                if post.pinned == 0
                                    if user.role == 1
                                        form(action=`/dashboard/pinPost/${post.postID}`,method="post")
                                            input(type="submit" value='Pripni objavo')
                                    else 
                                        form(action=`/dashboard/requestPin/${post.postID}`,method="post")
                                            input(type="submit" value='Zahtevaj pripeto objavo')
                                else if post.pinned == 1 && user.role == 1
                                        form(action=`/dashboard/removePin/${post.postID}`,method="post")
                                            input(type="submit" value='Odpni objavo')
                                if user.role == 1
                                    form(action=`/dashboard/removePost/${post.postID}`,method="post")
                                        input(type="submit" value='Izbrisi objavo')
                            .commentForm
                                form(action=`/dashboard/addComment/${post.postID}`,method="post")
                                    textarea.comment(id=`comment${post.postID}`, name="comment", cols="30", rows="2", maxlength=250, oninput=`updateCommentCharCounter(${post.postID})`)
                                    p.commentCounter(id=`commentCounter${post.postID}`) 0/250
                                    input(type="submit" value='Objavi')
                            .comments
                                if comments
                                    each comment in comments
                                        if comment.postID == post.postID
                                            .commentWrapper
                                                .commentHeader
                                                    h5= `${comment.dateComment}, ${comment.name} ${comment.surname}`
                                                .commentContent
                                                    p= comment.content
                                                if user.role == 1
                                                    form(action=`/dashboard/removeComment/${comment.commentID}`,method="post")
                                                        input(type="submit" value='Izbrisi komentar')

       

        
        